{% extends '_templates/base.njk' %}

{% block content %}
<article class="container">
  <h1>Ships of the Golden Age of Pirates</h1>
  <p><h2>Pirate ships intro</h2></p>
<div class="row">
{% for ship in pirates.ships %}
  <div class="col-sm-6 col-lg-4">
    <div class="card bg-light mb-4" style="max-width: 25rem;">
      <div class="card-body">
        <h5 class="card-title">{{ ship.ship_name }}</h5>
            <h6 class="captain-name">{{ ship.captain}}</h6>
        <p class="card-text"> {{ ship.blurb }}</p>
        <a href="{{ ship.source }}" target="_blank">Source</a>
      </div>
    </div>
  </div>
{% endfor %}
</div>
</article>
{% endblock %}
